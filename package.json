{
  "name": "vellum",
  "version": "0.1.0",
  "private": true,
  "description": "Next-generation AI coding agent",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "dev": "node scripts/dev.mjs",
    "dev:core": "pnpm -F @vellum/core dev",
    "dev:cli": "pnpm -F @butlerw/vellum dev",
    "build": "pnpm -r --workspace-concurrency=1 build",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rimraf node_modules",
    "prepare": "husky"
  },
  "keywords": [
    "ai",
    "agent",
    "cli",
    "coding-assistant"
  ],
  "author": "Vellum Team",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ],
    "*.json": [
      "biome format --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@vitest/coverage-v8": "^4.0.18",
    "dependency-cruiser": "^17.3.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "zod-to-json-schema": "3.25.1"
  },
  "pnpm": {
    "overrides": {
      "hono": ">=4.11.4",
      "ink": "npm:@jrichman/ink@6.4.7",
      "wrap-ansi": "9.0.2",
      "cliui>wrap-ansi": "7.0.0"
    }
  }
}
