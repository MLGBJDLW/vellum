{
  "name": "vellum",
  "version": "0.1.0",
  "private": true,
  "description": "Next-generation AI coding agent",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "pnpm -F @vellum/cli dev",
    "build": "pnpm -r build",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rimraf node_modules",
    "prepare": "husky"
  },
  "keywords": [
    "ai",
    "agent",
    "cli",
    "coding-assistant"
  ],
  "author": "Vellum Team",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ],
    "*.{json,md}": [
      "biome format --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@vitest/coverage-v8": "^4.0.16",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "vitest": "^4.0.16"
  }
}
