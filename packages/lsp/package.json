{
  "name": "@vellum/lsp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    },
    "./config-schema": {
      "types": "./dist/config-schema.d.ts",
      "import": "./dist/config-schema.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/config.ts src/config-schema.ts --format esm --dts",
    "dev": "tsup src/index.ts src/config.ts src/config-schema.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "lru-cache": "^10.4.3",
    "nanoid": "^5.1.6",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageserver-protocol": "^3.17.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
