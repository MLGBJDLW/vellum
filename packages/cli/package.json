{
  "name": "@butlerw/vellum",
  "version": "0.1.13",
  "description": "Next-generation AI coding assistant CLI",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.mjs",
  "bin": {
    "vellum": "./dist/index.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.tsx --banner",
    "dev:blessed": "tsx src/tui-blessed/test.ts",
    "start": "node dist/index.mjs",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@google/genai": "^1.38.0",
    "@inquirer/prompts": "^7.10.1",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "chalk": "^5.6.2",
    "clipboardy": "^5.0.2",
    "commander": "^12.1.0",
    "fuzzysort": "^3.1.0",
    "gray-matter": "^4.0.3",
    "ink": "npm:@jrichman/ink@6.4.7",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "marked": "^17.0.1",
    "open": "^10.2.0",
    "openai": "^6.16.0",
    "react": "^19.2.3",
    "shiki": "^3.21.0",
    "string-width": "^8.1.0",
    "strip-ansi": "^7.1.2",
    "table": "^6.9.0",
    "wrap-ansi": "9.0.2",
    "zod": "^4.3.6"
  },
  "optionalDependencies": {
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/node": "^22.19.7",
    "@types/react": "^19.2.9",
    "@vellum/core": "workspace:*",
    "@vellum/lsp": "workspace:*",
    "@vellum/mcp": "workspace:*",
    "@vellum/plugin": "workspace:*",
    "@vellum/provider": "workspace:*",
    "@vellum/sandbox": "workspace:*",
    "@vellum/shared": "workspace:*",
    "ink-testing-library": "^4.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
