{
  "name": "@butlerw/vellum",
  "version": "0.1.0",
  "description": "Next-generation AI coding assistant CLI",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "vellum": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.tsx --format esm",
    "dev": "tsx src/index.tsx --banner",
    "dev:blessed": "tsx src/tui-blessed/test.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.1",
    "@vellum/core": "workspace:*",
    "@vellum/lsp": "workspace:*",
    "@vellum/mcp": "workspace:*",
    "@vellum/plugin": "workspace:*",
    "@vellum/provider": "workspace:*",
    "@vellum/shared": "workspace:*",
    "chalk": "^5.3.0",
    "clipboardy": "^5.0.2",
    "commander": "^12.1.0",
    "fuzzysort": "^3.1.0",
    "gray-matter": "^4.0.3",
    "ink": "npm:@jrichman/ink@6.4.7",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^17.0.1",
    "neo-blessed": "^0.1.23",
    "open": "^10.1.0",
    "ora": "^8.1.1",
    "react": "^19.2.3",
    "shiki": "^3.21.0",
    "string-width": "^8.1.0",
    "strip-ansi": "^7.1.0",
    "table": "^6.9.0",
    "wrap-ansi": "9.0.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/marked": "^6.0.0",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.0",
    "ink-testing-library": "^4.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
