{
  "name": "@vellum/tool",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --external @vellum/core",
    "dev": "tsup src/index.ts --format esm --dts --watch --external @vellum/core",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@vellum/core": "workspace:*",
    "@vellum/shared": "workspace:*",
    "nanoid": "^5.1.6",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
