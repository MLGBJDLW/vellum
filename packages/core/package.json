{
  "name": "@vellum/core",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsup src/index.ts --format esm --dts",
    "postbuild": "node -e \"const fs=require('fs');const p=require('path');fs.cpSync(p.join('src','prompts','markdown'),p.join('dist','markdown'),{recursive:true})\"",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@opentelemetry/api": "1.7.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.46.0",
    "@opentelemetry/resources": "1.18.0",
    "@opentelemetry/sdk-node": "0.46.0",
    "@opentelemetry/sdk-trace-node": "1.18.0",
    "@opentelemetry/semantic-conventions": "1.18.0",
    "@vellum/lsp": "workspace:*",
    "@vellum/provider": "workspace:*",
    "@vellum/sandbox": "workspace:*",
    "@vellum/shared": "workspace:*",
    "chokidar": "^5.0.0",
    "date-fns": "^4.1.0",
    "diff": "^5.2.2",
    "gray-matter": "^4.0.3",
    "ignore": "^5.3.2",
    "js-yaml": "^4.1.1",
    "keytar": "^7.9.0",
    "minisearch": "^7.2.0",
    "nanoid": "^5.1.6",
    "picomatch": "^4.0.3",
    "simple-git": "^3.30.0",
    "zod": "^4.3.6",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@types/diff": "^5.2.3",
    "@types/iarna__toml": "^2.0.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.19.7",
    "@types/picomatch": "^4.0.2",
    "rimraf": "^5.0.10",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "comments": {
    "keytar-bun-compat": "keytar uses native Node-API bindings. For Bun: ensure node-gyp build tools are available. May require --backend=node flag in some Bun versions."
  }
}
